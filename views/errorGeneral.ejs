<%- include('components/headHTML.ejs') %>

<body>
  <%- include('components/navbar_header_before_signin.ejs') %>
  <!-- Google Translate API -->
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="./styles/main.css" />
  <script type="text/javascript">
    function googleTranslateElementInit() {
      new google.translate.TranslateElement({
        pageLanguage: 'en'
      }, 'google_translate_element');
    }
  </script>
  <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
  <script type="text/javascript">
    // Detect and store the language
    var language = navigator.language || navigator.userLanguage;
    // Use the language variable as needed
    console.log('Detected language:', language);
  </script>
  <div id="google_translate_element style=display: none;"></div>
  <!-- End of Google Translate API -->
  <div class="container d-flex justify-content-center align-items-center flex-grow-one">
    <div class="error-template">
      <div class="text-center">
        <img src="sadface.png" alt="404 Error" class="error-image img-fluid" height="100px">
      </div>
      <h1 class="mt-1 mb-0" style="text-align: center;"><%=error_code%></h1>
      <h3 class="mb-3" style="text-align: center;"><%=error_message%></h3>
      <p style="text-align: center;"><%=error_response%></p>
      <div class="my-3 d-flex justify-content-center">
        <div class="text-center me-2">
          <a href="/" class="btn btn-warning">Home</a>
        </div>
        <% if (error_redirect !== 'undefined') { %>
          <div class="text-center">
            <a href="<%=error_redirect%>" class="btn btn-warning"><%=error_redirect_button%></a>
          </div>
        <% } %>



      </div>
    </div>
  </div>
  <%- include('components/footer.ejs') %>
  <script src="../scripts/main.js"></script>
</body>

</html>