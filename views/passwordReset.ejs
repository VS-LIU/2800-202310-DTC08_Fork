<%- include('components/headHTML.ejs') %>

    <body>

        <style>
            .VIpgJd-ZVi9od-ORHb-oEVmcd {
                display: none;
            }
        </style>
        <%- include('components/navbar_header.ejs') %>

            <div id="google_translate_element style=display: none;"></div>

            <script type="text/javascript">
                function googleTranslateElementInit() {
                    new google.translate.TranslateElement({
                        pageLanguage: 'en'
                    }, 'google_translate_element');
                }
            </script>

            <script type="text/javascript"
                src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
            <section class="vh-100" style="background-color: #eee">
                <div class="container mt-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-12 col-xl-11">
                            <div class="card text-black" style="border-radius: 25px">
                                <div class="card-body container p-md-5">

                                    <div class="row justify-content-center">
                                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                                class="img-fluid" alt="Sample image">
        
                                        </div>
                                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                            <p class="text-center h1 fw-bold mb-4 mx-1 mx-md-4 mt-4">
                                                Reset Password
                                            </p>
                                            <div class="d-flex flex-row align-items-center mb-2">


                                                <form class="form-floating flex-fill mb-0 needs-validation" novalidate
                                                    action="/confirmNewPassword" method="post">
                                                    <input type="hidden" name="token" value="<%= token %>">
                                                    <input type="hidden" name="userID" value="<%= id %>">
                                                    <div class="row justify-content-center">
                                                        <div class="col">
                                                            <div class="row align-items-center">
                                                                <i class="col-auto fas fa-lock fa-lg"></i>
                                                                <div class="col form-floating">
                                                                    <input type="password" id="newPassword"
                                                                        class="form-control" name="newPassword"
                                                                        required autocomplete="off">
                                                                    <label class="form-label mx-3"
                                                                        for="form3Example4c">Enter New Password</label>
                                                                    <div class="invalid-feedback">
                                                                        Please enter new password.
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row align-items-center my-4">
                                                                <i class="col-auto fas fa-key fa-lg"></i>
                                                                <div class="col form-floating">
                                                                    <input type="password" id="confirmPassword"
                                                                        class="form-control" name="confirmPassword" required autocomplete="off">
                                                                    <label class="form-label mx-3"
                                                                        for="form3Example4c">Confirm New
                                                                        Password</label>
                                                                    <div class="invalid-feedback">
                                                                        Password not a match.
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row justify-content-center">
                                                            <button type="submit"
                                                                class="col-auto btn btn-primary btn-lg mb-3">
                                                                Submit
                                                            </button>
                                                        </div>
                                                </form>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

            </section>

        <%- include('components/footer.ejs') %>
        <script src="../scripts/firebase_authentication.js"></script>
        <script src="../scripts/login.js"></script>
        <script src="../scripts/passwordReset.js"></script>
    </body>

    </html>