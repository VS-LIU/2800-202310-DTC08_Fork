<div class="card mt-3 mb-3">
    <div class="row">
        <div class="col-10">
            <!-- Title starts here-->
            <div class="row">
                <h4><%= title %></h4>
            </div>

            <!-- Details starts here-->
            <div class="row">
                <p class="description"><%= description %></p>
            </div>
        </div>
            <!-- Share Button starts here-->
        <div class="col-2">
            <button class="btn btn-primary"><span class="material-symbols-outlined"> share </span></button>
            <button class="btn btn-secondary"><span class="material-symbols-outlined"> delete </span></button>
        </div>
    </div>
</div>