<div class="shadow-custom card container mt-3 colour-yellow" value="<%= _id %>"" style="border-radius: 10px; overflow: hidden;">
    <div class="col">
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col col-md-10 pt-2 colour-yellow">
                <!-- Title starts here-->
                <div class="row">
                    <a href="/trackProgress?id=<%= _id %>">
                        <h4 class="mt-3 fw-medium">
                            <%= title %>
                        </h4>
                    </a>
                </div>
                <!-- Details starts here-->
                <div class="row">
                    <p class="description">
                        <%= description %>
                    </p>
                </div>
            </div>
            <hr class="m-0">
            <div class="col col-md-2 container my-2">
                <div class="d-flex justify-content-end">
                    <!-- Share Button-->
                    <button class="btn" onclick="shareRoadmap(this)"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-share-fill" viewBox="0 0 16 16">
                        <path d="M11 2.5a2.5 2.5 0 1 1 .603 1.628l-6.718 3.12a2.499 2.499 0 0 1 0 1.504l6.718 3.12a2.5 2.5 0 1 1-.488.876l-6.718-3.12a2.5 2.5 0 1 1 0-3.256l6.718-3.12A2.5 2.5 0 0 1 11 2.5z"/>
                      </svg> </button>
                    <!-- Delete Button-->
                    <button class="btn" onclick="deleteRoadmap(this)"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                      </svg></span></button>
                </div>
            </div>
        </div>
    </div>
</div>

