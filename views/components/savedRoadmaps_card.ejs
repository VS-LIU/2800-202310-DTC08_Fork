<div class="card container mt-3 mb-3">
    <div class="col">
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col col-md-10">
                <!-- Title starts here-->
                <div class="row">
                    <h4 class="mt-3">
                        <%= title %>
                    </h4>
                </div>
                <!-- Details starts here-->
                <div class="row">
                    <p class="description">
                        <%= description %>
                    </p>
                </div>
            </div>
            <div class="col col-md-2 container">
                <!-- Share Button starts here-->
                <div class="row">
                    <button class="btn btn-primary col-6 col-md-12 py-md-3" onclick="shareRoadmap()"><span class="material-symbols-outlined"> share </span></button>
                    <button class="btn btn-secondary col-6 col-md-12 py-md-3" onclick="deleteRoadmap()"><span class="material-symbols-outlined"> delete </span></button>
                </div>
            </div>
        </div>
    </div>
</div>

