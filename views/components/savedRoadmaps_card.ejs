<div class="card container mt-3 mb-3" value="<%= _id %>">
    <div class="col">
        <div class="row row-cols-1 row-cols-md-2">
            <div class="col col-md-10">
                <!-- Title starts here-->
                <div class="row">
                    <!-- <a href="https://outrageous-gold-pullover.cyclic.app/trackProgress?id=<%= _id %>"> -->
                    <a href="/trackProgress?id=<%= _id %>">
                        <h4 class="mt-3">
                            <%= title %>
                        </h4>
                    </a>
                </div>
                <!-- Details starts here-->
                <div class="row">
                    <p class="description">
                        <%= description %>
                    </p>
                </div>
            </div>
            <div class="col col-md-2 container">
                <!-- Share Button starts here-->
                <div class="row">
                    <button class="btn btn-primary col-6 col-md-12 py-md-3" onclick="shareRoadmap(this)"><img
                            src="share_button.png" style="height: 30px" alt="Delete" /> share </span></button>
                    <button class="btn btn-secondary col-6 col-md-12 py-md-3" onclick="deleteRoadmap(this)"><img
                            src="delete_button.png" style="height: 30px" alt="Delete" /> delete </span></button>
                </div>
            </div>
        </div>
    </div>
</div>

